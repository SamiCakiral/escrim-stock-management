<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" 
         version="4.0">

  

  <!-- Pour le main du personnel -->
  <servlet>
    <servlet-name>PersonnelServlet</servlet-name>
    <servlet-class>com.webapp.mvc.controler.personne.PersonnelServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PersonnelServlet</servlet-name>
    <url-pattern>/personnel</url-pattern>

  </servlet-mapping>

  <!-- Pour chaque personne -->
  <servlet>
    <servlet-name>dispatcher</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/spring/appServlet/servlet-context.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>dispatcher</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <!-- Pour le main du patient -->
  <servlet>
    <servlet-name>PatientServlet</servlet-name>
    <servlet-class>com.webapp.mvc.controler.personne.PatientServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PatientServlet</servlet-name>
    <url-pattern>/patient</url-pattern>
  </servlet-mapping>

  <!-- Pour chaque Patient -->
  <servlet>
    <servlet-name>ControlerPatient</servlet-name>
    <servlet-class>com.webapp.mvc.controler.personne.ControlerPatient</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ControlerPatient</servlet-name>
    <url-pattern>/patient/*</url-pattern>
  </servlet-mapping>

  <!-- Pour le main du materiel -->
  <servlet>
    <servlet-name>MaterielServlet</servlet-name>
    <servlet-class>com.webapp.mvc.controler.materiel.MaterielServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MaterielServlet</servlet-name>
    <url-pattern>/materiel</url-pattern>
  </servlet-mapping>

  <!-- Pour chaque materiel -->
  <servlet>
    <servlet-name>ControlerMateriel</servlet-name>
    <servlet-class>com.webapp.mvc.controler.materiel.ControlerMateriel</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ControlerMateriel</servlet-name>
    <url-pattern>/materiel/*</url-pattern>
  </servlet-mapping>


  <!-- Pour chaque stock -->
  <servlet>
    <servlet-name>StockServlet</servlet-name>
    <servlet-class>com.webapp.mvc.controler.StockServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>StockServlet</servlet-name>
    <url-pattern>/inventaire</url-pattern>
  </servlet-mapping>

  <!-- Pour le main des commandes -->
  <servlet>
    <servlet-name>CommandeServlet</servlet-name>
    <servlet-class>com.webapp.mvc.controler.CommandeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CommandeServlet</servlet-name>
    <url-pattern>/commande</url-pattern>
  </servlet-mapping>
  <!-- Pour les commandes -->
  <servlet>
    <servlet-name>ControlerCommande</servlet-name>
    <servlet-class>com.webapp.mvc.controler.commande.ControlerCommande</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ControlerCommande</servlet-name>
    <url-pattern>/commande/*</url-pattern>
  </servlet-mapping>


  <!-- Pour le main -->
  <servlet>
    <servlet-name>HomeServlet</servlet-name>
    <servlet-class>com.webapp.mvc.controler.ControlerMain</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HomeServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
</web-app>